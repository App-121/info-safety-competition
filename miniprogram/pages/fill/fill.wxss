/* pages/homepage/share/share.wxss */
page{
  background-color: #fff;
}
.headTitle{
  font-size: 36rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: rgb(35, 112, 252);
  font-weight: 800;
}
.padding{
  padding: 20rpx 30rpx;
}
.title-head{
  font-size: 28rpx;
  font-weight: 800;
}
.title-body{
  padding-left: 20rpx;
  padding-top: 20rpx;
  line-height: 48rpx;
  font-size: 26rpx;
}
.answerSelected{
  display: flex;
  align-items: center;
  border: 1rpx solid rgb(61, 111, 206);
  box-shadow: 4rpx 4rpx 4rpx rgb(211, 233, 255);
  background-color: rgb(212, 227, 255);
  border-radius: 6rpx;
  margin-bottom: 14rpx;
  padding: 8rpx;
}
.answer{
  display: flex;
  align-items: center;
  border: 1rpx solid rgb(222, 229, 235);
  border-radius: 6rpx;
  margin-bottom: 14rpx;
  padding: 8rpx;
}

.SCselected{
  height: 34rpx;
  width: 34rpx; 
  margin-top: 2rpx;
  margin-left: 10rpx;  
  margin-right: 6rpx;     
}

.submit{
  height: 80rpx;
  width: 80%;
  margin: 40rpx auto;
  background-color: rgb(38, 113, 254);
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  line-height: 80rpx;
  text-align: center;
}
.w-button-hover-class{
  background-color: rgb(38, 113, 254)!important;
}
.circle{
  border: 1rpx solid rgb(229, 229, 229);
  height: 27rpx;
  width: 27rpx;
  border-radius: 50%;
  margin-top: 6rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;     
}
radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;
   height: 40rpx;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background: #387ef5;
}



.goods-detail-m .mask-m {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}
 
.goods-detail-m .mask-m {
  background: rgba(0, 0, 0, 0.2);
}
 
.goodsdetail-m {
  position: fixed;
  top: 380rpx;
  left: 125rpx;
  z-index: 4999999999;
  width: 500rpx;
  /* height: 190rpx; */
  background: #fff;
}
 
.goodsdetail-m-title {
  width: 420rpx;
  /* height: 100rpx; *//* box-sizing: border-box; *//* border: 1rpx solid #aaa; */
  padding: 30rpx 40rpx 30rpx 40rpx;
  font-size: 32rpx;
  color: #000;
  text-align: center;
}
 
.goodsdetail-m-body {
  width: 500rpx;
  height: 90rpx;
  display: flex;
}
 
.goodsdetail-m-body-left {
  width: 250rpx;
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #3cc51f;
  border-top: 1rpx solid #e5e5e6;
  text-align: center;
}
 
.goodsdetail-m-body-right {
  width: 250rpx;
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #aaa;
  border-top: 1rpx solid #e5e5e6;
  border-left: 1rpx solid #e5e5e6;
  border-radius: 0;
  text-align: center;
}